<% if current_user %>
  <div class="">
    <%= form_for [@presenter.blog, :default, @presenter.comment], html: {class: 'comment-form'} do |f| %>
      <h1 class="comment-label bottom-10">LEAVE A REPLY</h1>
      <%= hidden_field_tag 'comment[user_id]', current_user.id %>
      <%= hidden_field_tag 'comment[blog_id]', @presenter.blog.id %>
      <%= f.text_area :body, class: 'comment-text' %>
      <%= f.submit "POST COMMENT", class: 'comment-button'%>
    <% end %>
  </div>
<% end %>
