<% if current_user %>
  <%= form_for [@blog, :default, @comment] do |f| %>
    <%= hidden_field_tag 'comment[user_id]', current_user.id %>
    <%= hidden_field_tag 'comment[blog_id]', @blog.id %>
    <%= f.label :body, "Your Comment" %>
    <%= f.text_area :body %>
    <%= f.submit "Submit Comment"%>
  <% end %>
<% end %>
