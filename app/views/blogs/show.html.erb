<% if @blog %>
  <% if @categories %>
    <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
    <% end %>
  <% end %>

  <%= @blog.title %>
  <%= @blog.created_date %>
  <img src="<%= @blog.image %>" class="photo">
  <%= @blog.body %>

  <% if current_admin? %>
  <%= button_to "Delete", admin_blog_path(@blog), method: :delete %>
  <%= button_to "Edit", edit_admin_blog_path(@blog), method: :get %>
  <% end %>

  <% if @comments %>
    <% @comments.each do |comment| %>
    <div class="">
      <%= comment.user.username %>
      <%= comment.created_time %>
      <%= comment.body %>
      <% if (comment.user == current_user) || current_admin? %>
        <%= button_to "Delete", blog_comment_path(@blog, comment), method: :delete %>
      <% end %>
      <%=  %>
    </div>
    <% end %>
  <% end %>

  <%= render partial: 'comments/form' %>
<% end %>
