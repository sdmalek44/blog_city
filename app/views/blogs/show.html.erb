<% if @blog %>
  <% if @categories %>
    <% @categories.each do |category| %>
    <%= link_to category.name, category_path(category) %>
    <% end %>
  <% end %>
  <%= @blog.title %>
  <%= @blog.created_date %>
  <img src="<%= @blog.image %>" class="photo">
  <%= @blog.body %>
  <% if current_admin? %>
  <%= button_to "Delete", admin_blog_path(@blog), method: :delete %>
  <% end %>
<% end %>
